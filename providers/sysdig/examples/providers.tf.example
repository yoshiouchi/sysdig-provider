terraform {
  required_version = ">= 1.6.0"
  required_providers {
    sysdig = {
      source  = "sysdiglabs/sysdig"
      version = "~> 1.0"
    }
  }
}

# Copy this into envs/*/providers.tf and adjust URLs via tfvars.
provider "sysdig" { alias = "secure"   sysdig_secure_url  = var.sysdig_secure_url }
provider "sysdig" { alias = "monitor"  sysdig_monitor_url = var.sysdig_monitor_url }
provider "sysdig" { alias = "platform" sysdig_secure_url  = var.sysdig_secure_url }
